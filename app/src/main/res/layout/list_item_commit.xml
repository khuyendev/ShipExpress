<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    android:layout_height="170dp">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtNameOrderShipCommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Áo Sport"
            android:textColor="#ff0008"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_radius"
            android:layout_alignParentStart="true"
            android:text="Từ chối" />
        <Button
            android:id="@+id/btnCommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnReject"
            android:background="@drawable/button_radius"
            android:text="Đồng ý" />

        <TextView
            android:text="Shipper:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignBaseline="@+id/txtNameShipperCommit"
            android:layout_alignBottom="@+id/txtNameShipperCommit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Vị trí:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameShipperCommit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView10" />

        <TextView
            android:text="134 Nguyễn Tri Phương, Chính Gián, Q. Thanh Khê, Đà Nẵng, Vietnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameShipperCommit"
            android:layout_alignLeft="@+id/txtNameShipperCommit"
            android:layout_alignStart="@+id/txtNameShipperCommit"
            android:id="@+id/textView11" />
        <TextView
            android:text="--km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_distance"
            android:id="@+id/imageView3"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView11" />

        <TextView
            android:id="@+id/txtNameShipperCommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Khuyến"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/txtNameOrderShipCommit"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9" />

    </RelativeLayout>
</android.support.v7.widget.CardView>